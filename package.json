{
  "name": "ghostcomms-noeu",
  "private": true,
  "scripts": {
    "bootstrap": "npm --prefix server install && npm --prefix client-web install",
    "dev": "bash scripts/dev.sh",
    "dev:server": "npm --prefix server run dev",
    "dev:client": "npm --prefix client-web run dev",
    "build": "npm --prefix server run build && npm --prefix client-web run build",
    "docker:up": "docker compose up --build",
    "docker:offline": "bash scripts/docker-offline.sh",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  }
}
